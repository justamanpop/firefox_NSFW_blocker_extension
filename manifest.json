{
    "manifest_version": 2,
    "name": "Porn blocker",
    "version" : "1.0",

    "description": "Blocks pages with pornographic content in it",

    "icons" : {
        "48": "icons/my_icon.png"
    },

    "content_scripts" : [
        {
            "matches" : ["<all_urls>"],
            "js" : ["first_extension.js"]
        }
    ],

    "background": {
        "scripts" : ["background/background_script.js"]
    }

}